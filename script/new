#!/bin/bash
# Creates a new post with today's date
# Usage: script/new [post-slug]

set -e

date=$(date +"%Y-%m-%d")
file="_posts/$date-$1.md"
title=${1//-/ }

git checkout -B "$1"

touch "$file"
echo -e "---\ntitle: $title\ndescription:\n---\n\n" > "$file"

git add "$file"
git commit -m "Create $file"

atom-beta pwd "$file"
