{
  "name": "Ben Balter's Website",
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu",
  "features": {
    "ghcr.io/devcontainers/features/node:1": {
      "version": "24"
    },
    "ghcr.io/devcontainers/features/ruby:1": {
      "version": "3.4"
    },
    "ghcr.io/devcontainers/features/docker-in-docker:2": {},
    "ghcr.io/devcontainers/features/git:1": {
      "version": "latest"
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "shopify.ruby-lsp",
        "yzhang.markdown-all-in-one",
        "davidanson.vscode-markdownlint",
        "sissel.shopify-liquid",
        "redhat.vscode-yaml",
        "esbenp.prettier-vscode",
        "dbaeumer.vscode-eslint",
        "ms-playwright.playwright",
        "github.copilot",
        "github.copilot-chat",
        "github.vscode-pull-request-github",
        "ms-vscode.vscode-typescript-next",
        "bradlc.vscode-tailwindcss",
        "eamodio.gitlens",
        "astro-build.astro-vscode"
      ],
      "settings": {
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
          "source.fixAll.eslint": "explicit"
        },
        "[ruby]": {
          "editor.defaultFormatter": "Shopify.ruby-lsp",
          "editor.formatOnSave": true
        },
        "[markdown]": {
          "editor.defaultFormatter": "vscode.markdown-language-features"
        },
        "[typescript]": {
          "editor.defaultFormatter": "vscode.typescript-language-features"
        },
        "[typescriptreact]": {
          "editor.defaultFormatter": "vscode.typescript-language-features"
        },
        "[javascript]": {
          "editor.defaultFormatter": "dbaeumer.vscode-eslint"
        },
        "files.associations": {
          "*.liquid": "liquid",
          "*.md": "markdown"
        },
        "search.exclude": {
          "**/node_modules": true,
          "**/vendor": true,
          "**/.bundle": true,
          "_site": true,
          "dist-astro": true
        }
      }
    }
  },
  "onCreateCommand": "script/bootstrap",
  "postCreateCommand": "sudo apt-get update && sudo apt-get install -y libvips-dev && ./node_modules/.bin/playwright install --with-deps chromium",
  "postStartCommand": "echo 'ðŸš€ Devcontainer ready! Run \"rake serve\" or \"script/server\" to start Jekyll, or \"npm run astro:dev\" for Astro.'",
  "forwardPorts": [4000, 4321],
  "portsAttributes": {
    "4000": {
      "label": "Jekyll Server",
      "onAutoForward": "notify"
    },
    "4321": {
      "label": "Astro Dev Server",
      "onAutoForward": "notify"
    }
  },
  "containerEnv": {
    "JEKYLL_ENV": "development"
  },
  "remoteUser": "vscode",
  "updateContentCommand": "npm install && bundle install"
}
