---
interface Props {
  title?: string;
  description?: string;
}

const { 
  title = 'Ben Balter', 
  description = 'Personal website of Ben Balter - Product Manager, Attorney, and Open Source Advocate'
} = Astro.props;

const fullTitle = title === 'Ben Balter' ? title : `${title} | Ben Balter`;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta name="generator" content={Astro.generator} />
    
    <!-- Favicon -->
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    
    <title>{fullTitle}</title>
  </head>
  <body>
    <header>
      <nav>
        <a href="/">Home</a>
        <a href="/about/">About</a>
        <a href="/resume/">Resume</a>
      </nav>
    </header>
    
    <main>
      <slot />
    </main>
    
    <footer>
      <p>&copy; {new Date().getFullYear()} Ben Balter. Built with Astro.</p>
    </footer>
    
    <style>
      body {
        font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
        line-height: 1.6;
        max-width: 800px;
        margin: 0 auto;
        padding: 2rem 1rem;
      }
      
      header {
        margin-bottom: 2rem;
        padding-bottom: 1rem;
        border-bottom: 1px solid #e0e0e0;
      }
      
      nav {
        display: flex;
        gap: 1rem;
      }
      
      nav a {
        text-decoration: none;
        color: #0366d6;
      }
      
      nav a:hover {
        text-decoration: underline;
      }
      
      footer {
        margin-top: 4rem;
        padding-top: 2rem;
        border-top: 1px solid #e0e0e0;
        text-align: center;
        color: #666;
      }
    </style>
  </body>
</html>
