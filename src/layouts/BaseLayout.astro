---
/**
 * Base Layout
 * 
 * Core layout for all pages with comprehensive SEO, Open Graph, and Twitter Card support.
 * Includes site-wide navigation, footer, and metadata.
 */

import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
import { siteConfig, socialLinks } from '../config';
import { generatePersonSchema, generateWebSiteSchema, generateBreadcrumbSchema, schemaToJsonLd } from '../utils/structured-data';
import '../styles/optimized.scss';

interface Props {
  title?: string;
  description?: string;
  image?: string;
  type?: 'website' | 'article';
  publishedTime?: Date;
  modifiedTime?: Date;
  author?: string;
  keywords?: string[];
  noindex?: boolean;
  hero?: boolean;
}

const { 
  title = siteConfig.name, 
  description = siteConfig.description,
  image,
  type = 'website',
  publishedTime,
  modifiedTime,
  author = siteConfig.author,
  keywords = siteConfig.keywords,
  noindex = false,
  hero = false,
} = Astro.props;

const fullTitle = title === siteConfig.name ? title : `${title} | ${siteConfig.name}`;
const canonicalUrl = new URL(Astro.url.pathname, siteConfig.url).toString();

// Default OG image if none provided
const ogImage = image 
  ? new URL(image, siteConfig.url).toString()
  : new URL('/assets/img/headshot.jpg', siteConfig.url).toString();

// Generate structured data (JSON-LD) for SEO
const personSchema = generatePersonSchema();
const websiteSchema = generateWebSiteSchema();

// Generate breadcrumb schema based on URL path
const pathSegments = Astro.url.pathname.split('/').filter(Boolean);
const breadcrumbItems = [
  { name: 'Home', url: siteConfig.url }
];

// Add path segments to breadcrumbs
let currentPath = siteConfig.url;
pathSegments.forEach((segment, index) => {
  currentPath += `/${segment}`;
  // Remove file extension, replace hyphens/underscores with spaces, capitalize words
  const cleanedSegment = segment.replace(/\.[^/.]+$/, '').replace(/[-_]+/g, ' ');
  const name = cleanedSegment.split(' ').map(word =>
    word.length > 0 ? word.charAt(0).toUpperCase() + word.slice(1) : ''
  ).join(' ');
  // Last item doesn't get a URL (it's the current page)
  const isLastItem = index === pathSegments.length - 1;
  breadcrumbItems.push({ 
    name, 
    url: isLastItem ? '' : currentPath 
  });
});

const breadcrumbSchema = pathSegments.length > 0 ? generateBreadcrumbSchema(breadcrumbItems) : null;

// Combine all schemas
const schemas = breadcrumbSchema 
  ? [personSchema, websiteSchema, breadcrumbSchema]
  : [personSchema, websiteSchema];
---

<!doctype html>
<html lang="en" data-bs-theme="auto">
  <head>
    <!-- Basic Meta Tags -->
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no" />
    <meta name="generator" content={Astro.generator} />
    <meta name="author" content={author} />
    {keywords.length > 0 && <meta name="keywords" content={keywords.join(', ')} />}
    {description && <meta name="description" content={description} />}
    {noindex && <meta name="robots" content="noindex, nofollow" />}
    
    <!-- Color Scheme and Theme -->
    <meta name="color-scheme" content="light dark" />
    <meta name="theme-color" content="#111111" media="(prefers-color-scheme: light)" />
    <meta name="theme-color" content="#eeeeee" media="(prefers-color-scheme: dark)" />
    
    <!-- Canonical URL -->
    <link rel="canonical" href={canonicalUrl} />
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content={type} />
    <meta property="og:url" content={canonicalUrl} />
    <meta property="og:title" content={fullTitle} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={ogImage} />
    <meta property="og:site_name" content={siteConfig.name} />
    <meta property="og:locale" content="en_US" />
    {publishedTime && <meta property="article:published_time" content={publishedTime.toISOString()} />}
    {modifiedTime && <meta property="article:modified_time" content={modifiedTime.toISOString()} />}
    {author && <meta property="article:author" content={author} />}
    
    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:site" content={siteConfig.twitterHandle} />
    <meta name="twitter:creator" content={siteConfig.twitterHandle} />
    <meta name="twitter:url" content={canonicalUrl} />
    <meta name="twitter:title" content={fullTitle} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImage} />
    
    <!-- Structured Data (JSON-LD) -->
    <script type="application/ld+json" set:html={schemaToJsonLd(schemas)} is:inline></script>
    
    <!-- Favicons -->
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="manifest" href="/site.webmanifest" />
    
    <!-- Additional Meta -->
    <link type="text/plain" rel="author" href="/humans.txt" />
    
    <!-- Social Links (rel=me for verification) -->
    {socialLinks.map((link) => (
      <link rel="me" href={link.url} />
    ))}
    
    <!-- Resource Hints for Performance -->
    <!-- Preconnect to critical external domains (used on most pages) -->
    <link rel="preconnect" href="https://avatars.githubusercontent.com" crossorigin />
    <link rel="preconnect" href="https://github.com" crossorigin />
    
    <!-- DNS Prefetch for other external resources -->
    <link rel="dns-prefetch" href="https://images.amazon.com" />
    <link rel="dns-prefetch" href="https://user-images.githubusercontent.com" />
    
    <!-- RSS Feed -->
    <link rel="alternate" type="application/rss+xml" title={`${siteConfig.name} - RSS Feed`} href="/feed.xml" />
    
    {hero && <link rel="preload" href="/assets/img/header.jpg" as="image" fetchpriority="high" />}
    
    <title>{fullTitle}</title>
  </head>
  <body class="mt-2">
    <!-- Skip to main content link for accessibility -->
    <a href="#content" class="skip-to-content">
      Skip to main content
    </a>
    
    <div class="container">
      {hero && <div class="hero-unit position-relative"></div>}
      
      <Navigation hero={hero} />
      
      <main id="content" role="main" class="content" tabindex="-1">
        <slot />
      </main>
      
      <Footer />
    </div>
    
    <!-- Font Awesome icons initialization -->
    <script>
      import '../scripts/fontawesome';
    </script>
    
    <!-- Minimal navigation toggle script -->
    <script>
      import '../scripts/navToggle';
    </script>
    
    <!-- Turbo Drive for faster page navigation -->
    <script>
      import '../scripts/turbo';
    </script>
  </body>
</html>
