---
/**
 * Base Layout
 * 
 * Core layout for all pages with comprehensive SEO, Open Graph, and Twitter Card support.
 * Includes site-wide navigation, footer, and metadata.
 */

import { SEO } from 'astro-seo';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
import { siteConfig, socialLinks } from '../config';
import { generatePersonSchema, generateWebSiteSchema, generateBreadcrumbSchema, schemaToJsonLd } from '../utils/structured-data';
import '../styles/optimized.scss';

interface Props {
  title?: string;
  description?: string;
  image?: string;
  type?: 'website' | 'article';
  publishedTime?: Date;
  modifiedTime?: Date;
  author?: string;
  keywords?: string[];
  noindex?: boolean;
  hero?: boolean;
}

const { 
  title = siteConfig.name, 
  description = siteConfig.description,
  image,
  type = 'website',
  publishedTime,
  modifiedTime,
  author = siteConfig.author,
  keywords = siteConfig.keywords,
  noindex = false,
  hero = false,
} = Astro.props;

const fullTitle = title === siteConfig.name ? title : `${title} | ${siteConfig.name}`;
const canonicalUrl = new URL(Astro.url.pathname, siteConfig.url).toString();

// Default OG image if none provided
const ogImage = image 
  ? new URL(image, siteConfig.url).toString()
  : new URL('/assets/img/headshot.jpg', siteConfig.url).toString();

// Generate structured data (JSON-LD) for SEO
const personSchema = generatePersonSchema();
const websiteSchema = generateWebSiteSchema();

// Generate breadcrumb schema based on URL path
const pathSegments = Astro.url.pathname.split('/').filter(Boolean);
const breadcrumbItems: Array<{ name: string; url?: string }> = [
  { name: 'Home', url: siteConfig.url }
];

// Add path segments to breadcrumbs
let currentPath = siteConfig.url;
pathSegments.forEach((segment, index) => {
  currentPath += `/${segment}`;
  // Remove file extension, replace hyphens/underscores with spaces, capitalize words
  const cleanedSegment = segment.replace(/\.[^/.]+$/, '').replace(/[-_]+/g, ' ');
  const name = cleanedSegment.split(' ').map(word =>
    word.length > 0 ? word.charAt(0).toUpperCase() + word.slice(1) : ''
  ).join(' ');
  // Last item doesn't get a URL (it's the current page)
  const isLastItem = index === pathSegments.length - 1;
  breadcrumbItems.push({ 
    name, 
    url: isLastItem ? undefined : currentPath
  });
});

const breadcrumbSchema = pathSegments.length > 0 ? generateBreadcrumbSchema(breadcrumbItems) : null;

// Combine all schemas
const schemas = breadcrumbSchema 
  ? [personSchema, websiteSchema, breadcrumbSchema]
  : [personSchema, websiteSchema];
---

<!doctype html>
<html lang="en" data-bs-theme="auto">
  <head>
    <!-- SEO Meta Tags (via astro-seo) -->
    <SEO
      title={fullTitle}
      description={description}
      canonical={canonicalUrl}
      noindex={noindex}
      nofollow={noindex}
      charset="UTF-8"
      openGraph={{
        basic: {
          title: fullTitle,
          type: type,
          image: ogImage,
          url: canonicalUrl,
        },
        optional: {
          description: description,
          locale: 'en_US',
          siteName: siteConfig.name,
        },
        ...(type === 'article' && publishedTime ? {
          article: {
            publishedTime: publishedTime.toISOString(),
            modifiedTime: modifiedTime?.toISOString(),
            authors: author ? [author] : undefined,
          }
        } : {}),
      }}
      twitter={{
        card: 'summary_large_image',
        site: siteConfig.twitterHandle,
        creator: siteConfig.twitterHandle,
        title: fullTitle,
        description: description,
        image: ogImage,
      }}
      extend={{
        meta: [
          // Compatibility and Viewport
          { httpEquiv: 'X-UA-Compatible', content: 'IE=edge,chrome=1' },
          { name: 'viewport', content: 'width=device-width, initial-scale=1.0, shrink-to-fit=no' },
          // Generator and Author
          { name: 'generator', content: Astro.generator },
          { name: 'author', content: author },
          // Keywords
          ...(keywords.length > 0 ? [{ name: 'keywords', content: keywords.join(', ') }] : []),
          // Color Scheme and Theme
          { name: 'color-scheme', content: 'light dark' },
          { name: 'theme-color', content: '#111111', media: '(prefers-color-scheme: light)' },
          { name: 'theme-color', content: '#eeeeee', media: '(prefers-color-scheme: dark)' },
        ],
        link: [
          // Favicons
          { rel: 'icon', type: 'image/x-icon', href: '/favicon.ico' },
          { rel: 'apple-touch-icon', sizes: '180x180', href: '/apple-touch-icon.png' },
          { rel: 'icon', type: 'image/png', sizes: '32x32', href: '/favicon-32x32.png' },
          { rel: 'icon', type: 'image/png', sizes: '16x16', href: '/favicon-16x16.png' },
          { rel: 'manifest', href: '/site.webmanifest' },
          // Additional Meta
          { rel: 'author', type: 'text/plain', href: '/humans.txt' },
          // Social Links (rel=me for verification)
          ...socialLinks.map((link) => ({ rel: 'me', href: link.url })),
          // Resource Hints for Performance
          { rel: 'preconnect', href: 'https://avatars.githubusercontent.com', crossorigin: 'anonymous' },
          { rel: 'preconnect', href: 'https://github.com', crossorigin: 'anonymous' },
          { rel: 'dns-prefetch', href: 'https://images.amazon.com' },
          { rel: 'dns-prefetch', href: 'https://user-images.githubusercontent.com' },
          // RSS Feed
          { rel: 'alternate', type: 'application/rss+xml', title: `${siteConfig.name} - RSS Feed`, href: '/feed.xml' },
          // Hero image preload
          ...(hero ? [{ rel: 'preload', href: '/assets/img/header.jpg', as: 'image', fetchPriority: 'high' as const }] : []),
        ],
      }}
    />
    
    <!-- Structured Data (JSON-LD) -->
    <script type="application/ld+json" set:html={schemaToJsonLd(schemas)} is:inline></script>
    
    <!-- Favicons are automatically injected by astro-favicons integration -->
    
    <!-- Additional Meta -->
    <link type="text/plain" rel="author" href="/humans.txt" />
    
    <!-- Social Links (rel=me for verification) -->
    {socialLinks.map((link) => (
      <link rel="me" href={link.url} />
    ))}
    
    <!-- Resource Hints for Performance -->
    <!-- Preconnect to critical external domains (used on most pages) -->
    <link rel="preconnect" href="https://avatars.githubusercontent.com" crossorigin />
    <link rel="preconnect" href="https://github.com" crossorigin />
    
    <!-- DNS Prefetch for other external resources -->
    <link rel="dns-prefetch" href="https://images.amazon.com" />
    <link rel="dns-prefetch" href="https://user-images.githubusercontent.com" />
    
    <!-- RSS Feed -->
    <link rel="alternate" type="application/rss+xml" title={`${siteConfig.name} - RSS Feed`} href="/feed.xml" />
    
    {hero && <link rel="preload" href="/assets/img/header.jpg" as="image" fetchpriority="high" />}
    
    <title>{fullTitle}</title>
  </head>
  <body class="mt-2">
    <!-- Skip to main content link for accessibility -->
    <a href="#content" class="skip-to-content visually-hidden-focusable">
      Skip to main content
    </a>
    
    <div class="container">
      {hero && <div class="hero-unit position-relative"></div>}
      
      <Navigation hero={hero} />
      
      <main id="content" role="main" class="content" tabindex="-1">
        <slot />
      </main>
      
      <Footer />
    </div>
    
    <!-- Font Awesome icons initialization -->
    <script>
      import '../scripts/fontawesome';
    </script>
    
    <!-- Minimal navigation toggle script -->
    <script>
      import '../scripts/navToggle';
    </script>
    
    <!-- Turbo Drive for faster page navigation -->
    <script>
      import '../scripts/turbo';
    </script>
  </body>
</html>
