---
/**
 * Blog Post Layout
 * 
 * Layout for rendering blog posts with proper metadata, structure, and styling.
 * Matches the Jekyll post layout with enhanced features.
 * Uses Bootstrap utility classes for maintainability.
 */

import BaseLayout from './BaseLayout.astro';
import Tldr from '../components/Tldr.astro';
import MiniBio from '../components/MiniBio.astro';
import Icon from '../components/Icon.astro';
import { siteConfig } from '../config';
import { calculateReadingTime } from '../utils/reading-time';
import { generateBlogPostingSchema, schemaToJsonLd } from '../utils/structured-data';
import { formatPostDate, getPostUrl } from '../utils/post-urls';
import ArchivedPostWarning from '../components/ArchivedPostWarning.astro';
import type { CollectionEntry } from 'astro:content';

interface Props {
  title: string;
  description: string;
  pubDate?: Date;
  updatedDate?: Date;
  image?: string;
  author?: string;
  tags?: string[];
  relatedPosts?: CollectionEntry<'posts'>[];
  archived?: boolean;
  postSlug: string;
}

const { 
  title, 
  description, 
  pubDate, 
  updatedDate, 
  image,
  author = siteConfig.author,
  tags = [],
  relatedPosts = [],
  archived = false,
  postSlug,
} = Astro.props;

const formattedDate = pubDate ? formatPostDate(pubDate) : undefined;

// Calculate reading time using improved utility
const content = await Astro.slots.render('default');
const readingTime = calculateReadingTime(content);

// Generate BlogPosting structured data for blog posts
const blogPostingSchema = pubDate ? generateBlogPostingSchema({
  title,
  description,
  url: new URL(Astro.url.pathname, siteConfig.url).toString(),
  publishedTime: pubDate,
  modifiedTime: updatedDate,
  image,
  author,
}) : null;
---

<BaseLayout 
  title={title} 
  description={description}
  type="article"
  publishedTime={pubDate}
  modifiedTime={updatedDate}
  image={image}
  author={author}
>
  <div class="row">
    <div class="col-md-10 offset-md-1 px-3">
      <article>
        <header class="mb-4">
          <h1 class="display-4 text-primary fw-bold">{title}</h1>
          
          {description && (
            <Tldr description={description} />
          )}
          
          <div class="text-body-secondary small mb-4">
            {readingTime > 0 && (
              <div>
                <Icon name="clock" /> {readingTime} min read
              </div>
            )}
          </div>
        </header>
        
        {archived && <ArchivedPostWarning />}
        
        <div class="post-content entrybody fs-5 lh-lg">
          <slot />
        </div>
        
        {pubDate && (
          <div class="mb-2 text-body-secondary small">
            Originally published {formattedDate} | <a class="link-secondary" href={`${siteConfig.githubRepoUrl}/commits/main/_posts/${postSlug}.md`} target="_blank" rel="noopener noreferrer" aria-label="View revision history">View revision history</a>
          </div>
        )}
        
        {tags.length > 0 && (
          <div class="mt-4 mb-3">
            <strong>Tags:</strong>
            {tags.map((tag) => (
              <span class="badge bg-secondary ms-2">{tag}</span>
            ))}
          </div>
        )}
        
        {relatedPosts.length > 0 && (
          <div class="mt-3 related-posts-section">
            <h3 class="fs-6 fw-semibold text-body-emphasis border-top pt-3 mb-3">If you enjoyed this post, you might also enjoy:</h3>
            <ul class="related-posts-list">
              {relatedPosts.map((post) => (
                <li>
                  <a href={getPostUrl(post.slug)} class="text-decoration-none">{post.data.title}</a>
                </li>
              ))}
            </ul>
          </div>
        )}
        
        <footer class="border-top pt-4 mt-4 mb-5 post-footer">
          <div class="row">
            <div class="col">
              <div class="mini-bio-card">
                <MiniBio />
              </div>
            </div>
            <div class="col-lg-2 text-center edit-section">
              <p class="mb-2">
                <small>This page is open source. Please <a 
                  href={`${siteConfig.githubRepoUrl}/edit/main/src/content/posts/${postSlug}.md`}
                  target="_blank"
                  rel="noopener noreferrer"
                  title="Help improve this article"
                  class="edit-link"
                >help improve it</a>.</small>
              </p>
              <a 
                class="btn btn-outline-primary btn-sm" 
                href={`${siteConfig.githubRepoUrl}/edit/main/src/content/posts/${postSlug}.md`}
                target="_blank"
                rel="noopener noreferrer"
                title="Help improve this article"
              >Edit</a>
            </div>
          </div>
        </footer>
      </article>
      
      {blogPostingSchema && (
        <script type="application/ld+json" set:html={schemaToJsonLd(blogPostingSchema)} is:inline></script>
      )}
    </div>
  </div>
</BaseLayout>

<style lang="scss">
  /* Import Bootstrap badge and button components (scoped to this component) */
  @import 'bootstrap/scss/functions';
  @import 'bootstrap/scss/variables';
  @import 'bootstrap/scss/variables-dark';
  @import 'bootstrap/scss/maps';
  @import 'bootstrap/scss/mixins';
  @import 'bootstrap/scss/badge';
  @import 'bootstrap/scss/buttons';
  
  /* Enhanced mini bio card styling */
  .mini-bio-card {
    padding: 1.5rem;
    background: linear-gradient(
      135deg,
      rgba(var(--bs-primary-rgb, 13, 110, 253), 0.03),
      rgba(var(--bs-primary-rgb, 13, 110, 253), 0.01)
    );
    border-left: 3px solid var(--bs-primary);
    border-radius: 0.5rem;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
  }
  
  /* Related posts section styling */
  .related-posts-section {
    padding: 1rem 0;
    
    h3 {
      position: relative;
      padding-left: 1rem;
      
      &::before {
        content: '';
        position: absolute;
        left: 0;
        top: 50%;
        transform: translateY(-50%);
        width: 4px;
        height: 1.2em;
        background: var(--bs-primary);
        border-radius: 2px;
      }
    }
  }
  
  .related-posts-list {
    list-style: none;
    padding-left: 0;
    margin-bottom: 0;
    
    li {
      position: relative;
      padding: 0.5rem 0 0.5rem 1.5rem;
      border-bottom: 1px solid var(--bs-border-color);
      
      &:last-child {
        border-bottom: none;
      }
      
      &::before {
        content: 'â†’';
        position: absolute;
        left: 0;
        color: var(--bs-primary);
        font-weight: bold;
        transition: transform 0.2s ease;
      }
      
      &:hover {
        a {
          color: var(--bs-primary);
        }
      }
      
      a {
        color: var(--bs-body-color);
        transition: color 0.2s ease;
        
        &:hover {
          color: var(--bs-primary);
        }
      }
    }
  }
  
  /* Respect reduced motion preferences for arrow animation */
  @media (prefers-reduced-motion: no-preference) {
    .related-posts-list li:hover::before {
      transform: translateX(4px);
    }
  }
  
  /* Post footer enhancements */
  .post-footer {
    border-top: 2px solid var(--bs-border-color) !important;
  }
  
  .edit-section {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
  }
  
  .edit-link {
    color: var(--bs-primary);
    text-decoration: none;
    border-bottom: 1px dotted var(--bs-primary);
    transition: border-bottom-color 0.2s ease;
    
    &:hover {
      border-bottom-color: transparent;
    }
  }
  
  /* Dark mode adjustments */
  @media (prefers-color-scheme: dark) {
    .mini-bio-card {
      background: linear-gradient(
        135deg,
        rgba(var(--bs-primary-rgb, 13, 110, 253), 0.08),
        rgba(var(--bs-primary-rgb, 13, 110, 253), 0.04)
      );
      box-shadow: 0 2px 8px rgba(0, 0, 0, 0.3);
    }
  }
  
  /* Minimal custom styles - Bootstrap utilities handle layout and spacing */
  /* Typography handled by global optimized.scss */
</style>
