---
/**
 * Blog Post Layout
 * 
 * Layout for rendering blog posts with proper metadata, structure, and styling.
 * Matches the Jekyll post layout with enhanced features.
 */

import BaseLayout from './BaseLayout.astro';
import { siteConfig } from '../config';

interface Props {
  title: string;
  description: string;
  pubDate?: Date;
  updatedDate?: Date;
  image?: string;
  author?: string;
  tags?: string[];
}

const { 
  title, 
  description, 
  pubDate, 
  updatedDate, 
  image,
  author = siteConfig.author,
  tags = [],
} = Astro.props;

const formattedDate = pubDate?.toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
});

const formattedUpdatedDate = updatedDate?.toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
});

// Calculate reading time (rough estimate: 200 words per minute)
const content = await Astro.slots.render('default');
const wordCount = content.split(/\s+/).length;
const readingTime = Math.ceil(wordCount / 200);
---

<BaseLayout 
  title={title} 
  description={description}
  type="article"
  publishedTime={pubDate}
  modifiedTime={updatedDate}
  image={image}
  author={author}
>
  <div class="row">
    <div class="col-md-10 offset-md-1">
      <article class="blog-post post">
        <header class="post-header">
          <h1 class="display-4 text-primary">{title}</h1>
          
          {description && (
            <p class="lead post-description">{description}</p>
          )}
          
          <div class="post-meta text-muted mb-4">
            {pubDate && (
              <div class="mb-2">
                <time datetime={pubDate.toISOString()}>
                  <i class="far fa-calendar"></i> Published {formattedDate}
                </time>
                {updatedDate && (
                  <span class="ms-3">
                    <i class="far fa-edit"></i> Updated {formattedUpdatedDate}
                  </span>
                )}
              </div>
            )}
            {readingTime > 0 && (
              <div>
                <i class="far fa-clock"></i> {readingTime} min read
              </div>
            )}
          </div>
          
          {image && (
            <img 
              src={image} 
              alt={title}
              class="post-image img-fluid rounded"
            />
          )}
        </header>
        
        <div class="post-content entrybody">
          <slot />
        </div>
        
        {tags.length > 0 && (
          <div class="post-tags mt-4 mb-3">
            <strong>Tags:</strong>
            {tags.map((tag) => (
              <span class="badge bg-secondary me-2">{tag}</span>
            ))}
          </div>
        )}
        
        <footer class="post-footer border-top pt-3 mt-4">
          <div class="row">
            <div class="col-md-6">
              <a href="/" class="back-link">
                <i class="fas fa-arrow-left"></i> Back to posts
              </a>
            </div>
            <div class="col-md-6 text-end">
              <a 
                href={`${siteConfig.githubRepoUrl}/blob/main${Astro.url.pathname}`}
                class="edit-link"
                target="_blank"
                rel="noopener noreferrer"
              >
                <i class="fas fa-edit"></i> Edit this page
              </a>
            </div>
          </div>
        </footer>
      </article>
    </div>
  </div>
</BaseLayout>

<style>
  .row {
    display: flex;
    flex-wrap: wrap;
    margin-right: -15px;
    margin-left: -15px;
  }

  .col-md-10 {
    flex: 0 0 auto;
    width: 83.333333%;
  }

  .offset-md-1 {
    margin-left: 8.333333%;
  }

  @media (max-width: 768px) {
    .col-md-10 {
      width: 100%;
    }
    .offset-md-1 {
      margin-left: 0;
    }
  }

  .blog-post {
    padding: 0 15px;
  }
  
  .post-header {
    margin-bottom: 3rem;
  }
  
  .display-4 {
    font-size: 2.5rem;
    font-weight: 700;
    line-height: 1.2;
    margin-bottom: 1rem;
  }

  .text-primary {
    color: #0366d6 !important;
  }

  .lead {
    font-size: 1.25rem;
    font-weight: 300;
  }
  
  .post-description {
    color: #586069;
    line-height: 1.5;
    margin-bottom: 1.5rem;
  }
  
  .post-meta {
    font-size: 0.9rem;
    color: #586069;
  }

  .text-muted {
    color: #6c757d !important;
  }

  .mb-2 {
    margin-bottom: 0.5rem !important;
  }

  .mb-3 {
    margin-bottom: 1rem !important;
  }

  .mb-4 {
    margin-bottom: 1.5rem !important;
  }

  .ms-3 {
    margin-left: 1rem !important;
  }

  .mt-4 {
    margin-top: 1.5rem !important;
  }

  .pt-3 {
    padding-top: 1rem !important;
  }
  
  .post-image {
    width: 100%;
    height: auto;
    border-radius: 8px;
    margin-top: 1.5rem;
  }

  .img-fluid {
    max-width: 100%;
    height: auto;
  }

  .rounded {
    border-radius: 0.375rem !important;
  }
  
  .post-content {
    font-size: 1.1rem;
    line-height: 1.7;
    color: #24292e;
  }
  
  .post-content :global(h2) {
    font-size: 1.8rem;
    font-weight: 600;
    margin-top: 2.5rem;
    margin-bottom: 1rem;
    color: #24292e;
  }
  
  .post-content :global(h3) {
    font-size: 1.4rem;
    font-weight: 600;
    margin-top: 2rem;
    margin-bottom: 0.75rem;
    color: #24292e;
  }
  
  .post-content :global(p) {
    margin-bottom: 1.5rem;
  }
  
  .post-content :global(ul),
  .post-content :global(ol) {
    margin-bottom: 1.5rem;
    padding-left: 2rem;
  }
  
  .post-content :global(li) {
    margin-bottom: 0.5rem;
  }
  
  .post-content :global(pre) {
    margin: 1.5rem 0;
    padding: 1rem;
    background-color: #f6f8fa;
    border-radius: 6px;
    overflow-x: auto;
  }
  
  .post-content :global(code) {
    font-family: 'SFMono-Regular', Consolas, 'Liberation Mono', Menlo, Courier, monospace;
    font-size: 0.9em;
  }
  
  .post-content :global(p code) {
    background-color: #f6f8fa;
    padding: 0.2em 0.4em;
    border-radius: 3px;
  }
  
  .post-content :global(blockquote) {
    border-left: 4px solid #0366d6;
    padding-left: 1rem;
    margin: 1.5rem 0;
    color: #586069;
    font-style: italic;
  }
  
  .post-content :global(a) {
    color: #0366d6;
    text-decoration: none;
  }
  
  .post-content :global(a:hover) {
    text-decoration: underline;
  }
  
  .post-content :global(table) {
    width: 100%;
    margin: 1.5rem 0;
    border-collapse: collapse;
  }
  
  .post-content :global(th),
  .post-content :global(td) {
    padding: 0.75rem;
    border: 1px solid #e1e4e8;
  }
  
  .post-content :global(th) {
    background-color: #f6f8fa;
    font-weight: 600;
  }
  
  .post-content :global(tr:nth-child(even)) {
    background-color: #f6f8fa;
  }

  .post-tags {
    margin-top: 1.5rem;
    margin-bottom: 1rem;
  }

  .badge {
    display: inline-block;
    padding: 0.35em 0.65em;
    font-size: 0.75em;
    font-weight: 700;
    line-height: 1;
    color: #fff;
    text-align: center;
    white-space: nowrap;
    vertical-align: baseline;
    border-radius: 0.375rem;
  }

  .bg-secondary {
    background-color: #6c757d !important;
  }

  .me-2 {
    margin-right: 0.5rem !important;
  }
  
  .post-footer {
    margin-top: 2rem;
    padding-top: 1rem;
    border-top: 1px solid #e1e4e8;
  }

  .border-top {
    border-top: 1px solid #dee2e6 !important;
  }

  .text-end {
    text-align: right !important;
  }

  @media (max-width: 768px) {
    .text-end {
      text-align: left !important;
      margin-top: 0.5rem;
    }
  }
  
  .back-link,
  .edit-link {
    color: #0366d6;
    text-decoration: none;
    font-weight: 500;
  }
  
  .back-link:hover,
  .edit-link:hover {
    text-decoration: underline;
  }
</style>
