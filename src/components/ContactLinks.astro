---
/**
 * ContactLinks Component
 * 
 * Displays social media contact links with icons.
 * Used on About and Contact pages to avoid duplication.
 * Uses Tailwind CSS utility classes for maintainability.
 * 
 * Uses inline SVG icons via the Icon component for better performance.
 */

import { siteConfig, contactLinks } from '../config';
import Icon from './Icon.astro';
---

<div class="contact-links text-center mt-6">
  <div class="flex flex-wrap justify-center">
    {contactLinks.map((link) => (
      <div class="w-full md:w-auto md:px-4 py-2">
        <a href={link.url} rel="me noopener" target="_blank" class="no-underline text-gray-600 dark:text-gray-400 hover:text-primary dark:hover:text-primary-400 transition-colors duration-200">
          <div class="flex md:flex-col items-center justify-center gap-2">
            <Icon name={link.icon} />
            <span>{link.name}</span>
          </div>
        </a>
      </div>
    ))}
  </div>

  <p class="text-sm mt-4">
    <a href="/key.asc">PGP: <code class="text-xs text-gray-700 dark:text-gray-300">{siteConfig.pgpKey}</code></a>
  </p>
</div>
