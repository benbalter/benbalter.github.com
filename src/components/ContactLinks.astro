---
/**
 * ContactLinks Component
 * 
 * Displays social media contact links with icons.
 * Used on About and Contact pages to avoid duplication.
 */

import { siteConfig, contactLinks } from '../config';
---

<div class="contact-links mt-4 text-center">
  <div class="row justify-content-center">
    {contactLinks.map((link) => (
      <div class="col-sm text-center">
        <a href={link.url} rel="me noopener" target="_blank" class="text-decoration-none text-body contact-link">
          <div class="mb-3">
            <div class="mb-2">
              <i class={`${link.icon} fs-5`} aria-hidden="true"></i>
            </div>
            <div>
              {link.name}
            </div>
          </div>
        </a>
      </div>
    ))}
  </div>

  <p class="small text-center">
    <a href="/key.asc">PGP: <code>{siteConfig.pgpKey}</code></a>
  </p>
</div>

<style>
  /* Only keep truly custom hover effect that can't be achieved with Bootstrap */
  .contact-link:hover {
    color: var(--bs-link-color) !important;
  }
</style>
