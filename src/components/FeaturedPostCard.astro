---
/**
 * FeaturedPostCard Component
 * 
 * Display a featured blog post with larger, more prominent styling.
 * Uses Tailwind CSS with enhanced visual hierarchy.
 * 
 * Props:
 * - title: Post title
 * - url: Post URL
 * - date: Post date (formatted string for display)
 * - isoDate: Post date in ISO 8601 format (YYYY-MM-DD) for datetime attribute
 * - description: Post description/excerpt
 * - readingTime: Reading time in minutes
 * 
 * Usage:
 * <FeaturedPostCard 
 *   title="My Featured Post" 
 *   url="/2024/01/01/my-post/"
 *   date="January 1, 2024"
 *   isoDate="2024-01-01"
 *   description="A brief description"
 *   readingTime={5}
 * />
 */

import { formatReadingTime } from '../utils/reading-time';
import { stripMarkdown } from '../utils/strip-markdown';

interface Props {
  title: string;
  url: string;
  date: string;
  isoDate: string;
  description?: string;
  readingTime: number;
}

const { title, url, date, isoDate, description, readingTime } = Astro.props;
---

<article class="card border-2 rounded-lg h-full featured-post-card bg-white dark:bg-gray-800 border-gray-200 dark:border-gray-700">
  <div class="card-accent"></div>
  <div class="card-body p-6">
    <h3 class="card-title text-xl font-bold mb-4">
      <a href={url} class="text-gray-900 dark:text-gray-100 no-underline stretched-link">{title}</a>
    </h3>
    <div class="text-gray-600 dark:text-gray-400 mb-4">
      <time datetime={isoDate}>{date}</time>
      <span class="mx-2">â€¢</span>
      <span>{formatReadingTime(readingTime)}</span>
    </div>
    {description && (
      <p class="card-text text-gray-600 dark:text-gray-400 mb-0">{stripMarkdown(description)}</p>
    )}
  </div>
</article>

<style>
  /* Enhanced styles for featured posts with accent border */
  .featured-post-card {
    position: relative;
    @apply transition-all duration-300 overflow-hidden;
  }
  
  /* Gradient accent on left border */
  .card-accent {
    position: absolute;
    left: 0;
    top: 0;
    bottom: 0;
    width: 4px;
    background: linear-gradient(
      180deg,
      #337ab7,
      rgba(51, 122, 183, 0.6)
    );
    @apply opacity-0 transition-opacity duration-300;
  }
  
  .featured-post-card:hover {
    @apply shadow-card-hover border-primary;
  }
  
  @media (prefers-reduced-motion: no-preference) {
    .featured-post-card:hover {
      @apply -translate-y-1.5;
    }
  }
  
  .featured-post-card:hover .card-accent {
    @apply opacity-100;
  }

  /* Dark mode box-shadow */
  @media (prefers-color-scheme: dark) {
    .featured-post-card:hover {
      @apply shadow-card-hover-dark;
    }
    
    .card-accent {
      background: linear-gradient(
        180deg,
        #337ab7,
        rgba(51, 122, 183, 0.7)
      );
    }
  }
  
  /* Ensure link covers entire card */
  .featured-post-card .stretched-link {
    @apply transition-colors duration-300;
  }
  
  .featured-post-card:hover .stretched-link {
    @apply text-primary;
  }
  
  /* Card title typography */
  .featured-post-card .card-title {
    letter-spacing: -0.02em;
    line-height: 1.2;
    position: static;
  }
  
  /* Stretched link pseudo-element */
  .stretched-link::after {
    content: '';
    @apply absolute inset-0;
  }
  
  /* Reduce top padding on mobile */
  @media (max-width: 767px) {
    .featured-post-card .card-body {
      @apply pt-4;
    }
  }
</style>
