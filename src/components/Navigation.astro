---
/**
 * Navigation Component
 * 
 * Site-wide navigation bar with active state highlighting.
 * Matches the structure and styling of the Jekyll navigation.
 */

import { siteConfig } from '../config';

interface Props {
  hero?: boolean;
}

interface NavItem {
  title: string;
  url: string;
}

const { hero = false } = Astro.props;

// Define navigation items (matching Jekyll's nav_pages)
const navItems: NavItem[] = [
  { title: 'Posts', url: '/' },
  { title: 'About', url: '/about/' },
  { title: 'Contact', url: '/contact/' },
];

// Get current path for active state
const currentPath = Astro.url.pathname;

// Conditionally add border-top and rounded-top classes when hero is not present
const navClasses = hero 
  ? "navbar navbar-expand-md bg-secondary-subtle text-secondary border-start border-end border-bottom rounded-bottom mb-3"
  : "navbar navbar-expand-md bg-secondary-subtle text-secondary border-start border-end border-bottom border-top rounded-top rounded-bottom mb-3";
---

<nav class={navClasses + ' shadow-sm'} aria-label="Main navigation">
  <div class="container-fluid">
    <a class="navbar-brand fw-bold" href="/">{siteConfig.name}</a>
    <button 
      class="navbar-toggler" 
      type="button" 
      aria-controls="navbar" 
      aria-expanded="false" 
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbar">
      <ul class="navbar-nav me-auto">
        {navItems.map((item) => {
          const isActive = currentPath === item.url || 
                          (item.url === '/' && currentPath === '/');
          return (
            <li class="nav-item">
              <a 
                href={item.url} 
                class={`nav-link${isActive ? ' active' : ''}`}
                aria-current={isActive ? 'page' : undefined}
              >
                {item.title}
              </a>
            </li>
          );
        })}
      </ul>
    </div>

    <span class="navbar-text text-end small">
      {siteConfig.description}
    </span>
  </div>
</nav>

<style lang="scss">
  /* Import Bootstrap navigation components (scoped to this component) */
  @import 'bootstrap/scss/functions';
  @import 'bootstrap/scss/variables';
  @import 'bootstrap/scss/variables-dark';
  @import 'bootstrap/scss/maps';
  @import 'bootstrap/scss/mixins';
  @import 'bootstrap/scss/nav';
  @import 'bootstrap/scss/navbar';
  @import 'bootstrap/scss/buttons';
  
  /* Minimal custom styles - most styling comes from Bootstrap */
  .navbar {
    background-color: var(--bs-secondary-bg) !important;
    border: 1px solid var(--bs-border-color);
  }

  .container-fluid {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    justify-content: space-between;
    padding: 0.5rem var(--bs-gutter-x, 1.5rem);
  }

  /* Prevent wrapping at desktop sizes */
  @media (min-width: 768px) {
    .container-fluid {
      flex-wrap: nowrap !important;
    }
  }

  .navbar-brand {
    color: var(--bs-body-color);
    margin-right: 1rem;
  }

  .navbar-toggler {
    border-color: rgba(0, 0, 0, 0.1);
  }

  /* Hide toggler at desktop sizes */
  @media (min-width: 768px) {
    .navbar-toggler {
      display: none;
    }
  }

  .navbar-toggler-icon {
    background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 30 30'%3e%3cpath stroke='rgba%280, 0, 0, 0.55%29' stroke-linecap='round' stroke-miterlimit='10' stroke-width='2' d='M4 7h22M4 15h22M4 23h22'/%3e%3c/svg%3e");
  }

  /* Dark mode toggler icon and border */
  @media (prefers-color-scheme: dark) {
    .navbar-toggler {
      border-color: rgba(255, 255, 255, 0.1);
    }

    .navbar-toggler-icon {
      background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 30 30'%3e%3cpath stroke='rgba%28255, 255, 255, 0.75%29' stroke-linecap='round' stroke-miterlimit='10' stroke-width='2' d='M4 7h22M4 15h22M4 23h22'/%3e%3c/svg%3e");
    }
  }

  .navbar-collapse {
    align-items: center;
  }

  .navbar-nav {
    display: flex;
    flex-direction: row;
    align-items: baseline;
    list-style: none;
    padding-left: 0;
    margin: 0;
  }

  .nav-item {
    display: flex;
    align-items: baseline;
  }

  .nav-link {
    display: block;
    padding: 0 1rem;
    color: var(--bs-link-color);
    text-decoration: none;
    transition: color 0.15s ease-in-out;
  }

  .nav-link:hover,
  .nav-link:focus {
    color: var(--bs-link-hover-color);
  }

  .nav-link.active {
    color: var(--bs-emphasis-color);
    font-weight: 500;
  }

  .navbar-text {
    color: var(--bs-secondary);
    padding: 0.5rem 0;
  }

  /* Collapse behavior for mobile - Bootstrap handles most of this */
  @media (min-width: 768px) {
    .navbar-collapse {
      display: flex !important;
      flex-basis: auto;
    }
  }

  @media (max-width: 767px) {
    .container-fluid {
      flex-direction: column;
      align-items: flex-start !important;
    }

    .navbar-collapse {
      flex-basis: 100%;
      width: 100%;
    }

    .navbar-nav {
      flex-direction: column;
      width: 100%;
    }

    .navbar-text {
      display: none;
    }
  }
</style>
