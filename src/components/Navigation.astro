---
/**
 * Navigation Component
 * 
 * Site-wide navigation bar with active state highlighting.
 * Matches the structure and styling of the Jekyll navigation.
 * Uses Tailwind CSS for styling.
 */

import { siteConfig } from '../config';

interface Props {
  hero?: boolean;
}

interface NavItem {
  title: string;
  url: string;
}

const { hero = false } = Astro.props;

// Define navigation items (matching Jekyll's nav_pages)
const navItems: NavItem[] = [
  { title: 'Posts', url: '/' },
  { title: 'About', url: '/about/' },
  { title: 'Contact', url: '/contact/' },
];

// Get current path for active state
const currentPath = Astro.url.pathname;

// Base classes for navbar
const baseClasses = "navbar flex flex-wrap items-center justify-between py-2 px-4 bg-gray-100 dark:bg-gray-800 border border-gray-200 dark:border-gray-700 shadow-sm mb-4";

// Conditionally add rounded classes based on hero presence
// For hero pages: round only bottom corners (top-left and top-right are 0)
// For non-hero pages: round all corners
const navClasses = hero 
  ? `${baseClasses} rounded-t-none rounded-b-lg border-t-0`
  : `${baseClasses} rounded-lg`;
---

<nav class={navClasses} aria-label="Main navigation" transition:persist="nav" data-has-hero={hero}>
  <script>
    // Update active nav link state and border styling on page transitions
    document.addEventListener('astro:page-load', () => {
      const currentPath = window.location.pathname;
      const navLinks = document.querySelectorAll('.navbar-nav .nav-link');
      
      // Update active link state
      navLinks.forEach((link) => {
        const href = link.getAttribute('href');
        const isActive = currentPath === href;
        
        if (isActive) {
          link.classList.add('active');
          link.setAttribute('aria-current', 'page');
        } else {
          link.classList.remove('active');
          link.removeAttribute('aria-current');
        }
      });
      
      // Update navigation border/rounded corners based on whether new page has hero
      const nav = document.querySelector('nav.navbar');
      const heroElement = document.querySelector('.hero-unit');
      const hasHero = heroElement !== null;
      
      if (nav) {
        nav.setAttribute('data-has-hero', hasHero.toString());
        
        if (hasHero) {
          // Hero page: bottom-only rounding, no top border, explicit no top rounding
          nav.classList.remove('rounded-lg');
          nav.classList.add('rounded-t-none', 'rounded-b-lg', 'border-t-0');
        } else {
          // Non-hero page: full rounding
          nav.classList.remove('rounded-t-none', 'rounded-b-lg', 'border-t-0');
          nav.classList.add('rounded-lg');
        }
      }
    });
  </script>
  <div class="flex flex-wrap items-center justify-between w-full">
    <a class="navbar-brand font-bold text-gray-900 dark:text-gray-100 no-underline min-h-[44px] flex items-center tracking-tight transition-colors duration-200 hover:text-primary dark:hover:text-primary-400 mb-2" href="/">{siteConfig.name}</a>
    <button 
      class="navbar-toggler p-2 rounded border border-gray-300 dark:border-gray-600 min-h-[44px] min-w-[44px] md:hidden focus:outline-2 focus:outline-primary focus:outline-offset-2" 
      type="button" 
      aria-controls="navbar" 
      aria-expanded="false" 
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon block w-6 h-6 bg-no-repeat bg-center"></span>
    </button>

    <div class="nav-collapse navbar-collapse w-full md:w-auto" id="navbar">
      <ul class="navbar-nav flex flex-col md:flex-row list-none p-0 m-0">
        {navItems.map((item) => {
          const isActive = currentPath === item.url || 
                          (item.url === '/' && currentPath === '/');
          return (
            <li class="nav-item relative">
              <a 
                href={item.url} 
                class={`nav-link px-4 py-3 flex items-center min-h-[44px] transition-colors duration-200 no-underline ${isActive ? 'active text-gray-900 dark:text-gray-100 font-semibold' : 'text-[#1a5490] dark:text-[#6cb4e8] hover:text-[#133d6b] dark:hover:text-[#8ac6f0]'}`}
                aria-current={isActive ? 'page' : undefined}
              >
                {item.title}
              </a>
            </li>
          );
        })}
      </ul>
    </div>

    <span class="navbar-text hidden md:block text-gray-700 dark:text-gray-400 text-sm text-right mb-2 md:border-l-2 md:border-primary/20 md:pl-4 md:ml-4">
      {siteConfig.description}
    </span>
  </div>
</nav>

<style>
  @reference "../styles/global.css";
  
  /* Active nav link underline */
  .nav-link {
    position: relative;
  }
  
  .nav-link::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 50%;
    width: 0;
    height: 2px;
    @apply bg-primary;
    transition: width 0.2s ease, left 0.2s ease;
  }
  
  .nav-link.active::after {
    width: 80%;
    left: 10%;
  }
  
  @media (hover: hover) {
    .nav-link:hover::after,
    .nav-link:focus::after {
      width: 80%;
      left: 10%;
    }
  }
  
  /* Touch feedback */
  .nav-link:active {
    @apply opacity-80;
  }
  
  /* Navbar toggler icon - light mode */
  .navbar-toggler-icon {
    background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 30 30'%3e%3cpath stroke='rgba%280, 0, 0, 0.55%29' stroke-linecap='round' stroke-miterlimit='10' stroke-width='2' d='M4 7h22M4 15h22M4 23h22'/%3e%3c/svg%3e");
  }
  
  /* Dark mode toggler icon */
  @media (prefers-color-scheme: dark) {
    .navbar-toggler-icon {
      background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 30 30'%3e%3cpath stroke='rgba%28255, 255, 255, 0.75%29' stroke-linecap='round' stroke-miterlimit='10' stroke-width='2' d='M4 7h22M4 15h22M4 23h22'/%3e%3c/svg%3e");
    }
  }
  
  /* Toggler expanded state */
  .navbar-toggler[aria-expanded="true"] {
    @apply bg-primary/10 border-primary;
  }
  
  .navbar-toggler[aria-expanded="true"] .navbar-toggler-icon {
    @apply opacity-80;
  }
  
  .navbar-toggler:active {
    @apply bg-primary/15;
  }
</style>
