---
/**
 * Navigation Component
 * 
 * Site-wide navigation bar with active state highlighting.
 * Matches the structure and styling of the Jekyll navigation.
 */

import { siteConfig } from '../config';

interface Props {
  hero?: boolean;
}

interface NavItem {
  title: string;
  url: string;
}

const { hero = false } = Astro.props;

// Define navigation items (matching Jekyll's nav_pages)
const navItems: NavItem[] = [
  { title: 'Posts', url: '/' },
  { title: 'About', url: '/about/' },
  { title: 'Contact', url: '/contact/' },
];

// Get current path for active state
const currentPath = Astro.url.pathname;

// Conditionally add border-top and rounded-top classes when hero is not present
const navClasses = hero 
  ? "navbar navbar-expand-md bg-secondary-subtle text-secondary border-start border-end border-bottom rounded-bottom mb-3"
  : "navbar navbar-expand-md bg-secondary-subtle text-secondary border-start border-end border-bottom border-top rounded-top rounded-bottom mb-3";
---

<div class={navClasses}>
  <div class="row">
    <div class="col-md-10 offset-md-1">
      <div class="navbar-inner">
        <a class="navbar-brand fw-bold" href="/">{siteConfig.name}</a>
        <button 
          class="navbar-toggler" 
          type="button" 
          aria-controls="navbar" 
          aria-expanded="false" 
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>

        <div class="navbar-collapse" id="navbar" role="navigation" aria-label="Main navigation">
          <ul class="navbar-nav mr-auto">
            {navItems.map((item) => {
              const isActive = currentPath === item.url || 
                              (item.url === '/' && currentPath === '/');
              return (
                <li class="nav-item">
                  <a 
                    href={item.url} 
                    class={`nav-link${isActive ? ' active' : ''}`}
                    aria-current={isActive ? 'page' : undefined}
                  >
                    {item.title}
                  </a>
                </li>
              );
            })}
          </ul>
        </div>

        <span class="navbar-text text-end">
          {siteConfig.description}
        </span>
      </div>
    </div>
  </div>
</div>

<style>
  .navbar {
    background-color: var(--bs-secondary-bg, #e9ecef) !important;
    border: 1px solid var(--bs-border-color, #dee2e6);
    margin-bottom: 1rem;
  }

  /* Border radius utilities (not included in optimized.scss) */
  .navbar.rounded-top {
    border-top-left-radius: var(--bs-border-radius, 0.375rem) !important;
    border-top-right-radius: var(--bs-border-radius, 0.375rem) !important;
  }

  .navbar.rounded-bottom {
    border-bottom-left-radius: var(--bs-border-radius, 0.375rem) !important;
    border-bottom-right-radius: var(--bs-border-radius, 0.375rem) !important;
  }

  /* Inner container to hold navbar content */
  .navbar-inner {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    justify-content: space-between;
    width: 100%;
    padding: 0.5rem var(--bs-gutter-x, 1.5rem);
  }

  .navbar-brand {
    font-weight: 700;
    color: var(--bs-body-color, #212529);
    margin-right: 1rem;
  }

  .navbar-toggler {
    border-color: rgba(0, 0, 0, 0.1);
  }

  /* Hide toggler at desktop sizes */
  @media (min-width: 768px) {
    .navbar-toggler {
      display: none;
    }
  }

  .navbar-toggler-icon {
    background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 30 30'%3e%3cpath stroke='rgba%280, 0, 0, 0.55%29' stroke-linecap='round' stroke-miterlimit='10' stroke-width='2' d='M4 7h22M4 15h22M4 23h22'/%3e%3c/svg%3e");
  }

  /* Dark mode toggler icon and border */
  @media (prefers-color-scheme: dark) {
    .navbar-toggler {
      border-color: rgba(255, 255, 255, 0.1);
    }

    .navbar-toggler-icon {
      background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 30 30'%3e%3cpath stroke='rgba%28255, 255, 255, 0.75%29' stroke-linecap='round' stroke-miterlimit='10' stroke-width='2' d='M4 7h22M4 15h22M4 23h22'/%3e%3c/svg%3e");
    }
  }

  .navbar-nav {
    display: flex;
    flex-direction: row;
    list-style: none;
    padding-left: 0;
    margin: 0;
  }

  .nav-item {
    margin: 0;
  }

  .nav-link {
    display: block;
    padding: 0.5rem 1rem;
    color: var(--bs-link-color, #0d6efd);
    text-decoration: none;
    transition: color 0.15s ease-in-out;
  }

  .nav-link:hover,
  .nav-link:focus {
    color: var(--bs-link-hover-color, #0a58ca);
  }

  .nav-link.active {
    color: var(--bs-emphasis-color, #000);
    font-weight: 500;
  }

  .navbar-text {
    color: var(--bs-secondary, #6c757d);
    font-size: 0.875rem;
    margin-left: auto;
  }

  /* Collapse behavior for mobile */
  .navbar-collapse {
    display: none;
  }

  .navbar-collapse.show {
    display: block;
  }

  @media (min-width: 768px) {
    .navbar-collapse {
      display: flex !important;
      flex-basis: auto;
    }
  }

  @media (max-width: 767px) {
    .navbar-inner {
      flex-direction: column;
      align-items: flex-start;
    }

    .navbar-collapse {
      flex-basis: 100%;
      width: 100%;
    }

    .navbar-nav {
      flex-direction: column;
      width: 100%;
    }

    .navbar-text {
      display: none;
    }
  }
</style>
