---
/**
 * Callout Component
 * 
 * Display important information, warnings, or notes in blog posts.
 * Uses Tailwind CSS best practices: utility-first with variant-based styling.
 */

interface Props {
  type?: 'info' | 'warning' | 'error' | 'success';
  title?: string;
}

const { type = 'info', title } = Astro.props;

const icons = {
  info: 'üí°',
  warning: '‚ö†Ô∏è',
  error: '‚ùå',
  success: '‚úÖ',
} as const;

// Tailwind variant classes for each callout type
const variantClasses = {
  info: 'border-blue-500 bg-blue-50 text-blue-800 dark:bg-blue-900/30 dark:text-blue-200',
  warning: 'border-yellow-500 bg-yellow-50 text-yellow-800 dark:bg-yellow-900/30 dark:text-yellow-200',
  error: 'border-red-500 bg-red-50 text-red-800 dark:bg-red-900/30 dark:text-red-200',
  success: 'border-green-500 bg-green-50 text-green-800 dark:bg-green-900/30 dark:text-green-200',
} as const;
---

<aside class={`my-6 rounded border-l-4 p-4 ${variantClasses[type]}`} role="note" aria-label={`${type} callout`}>
  {title && (
    <div class="mb-2 flex items-center gap-2 font-semibold">
      <span class="text-lg" aria-hidden="true">{icons[type]}</span>
      <strong>{title}</strong>
    </div>
  )}
  <div class="[&>p:last-child]:mb-0">
    <slot />
  </div>
</aside>
