---
/**
 * PostCard Component
 * 
 * Display a blog post with title, date, description, and reading time in a card format.
 * Uses Bootstrap card component and utility classes for styling with hover effects.
 * 
 * Props:
 * - title: Post title
 * - url: Post URL
 * - date: Post date (formatted string for display)
 * - isoDate: Post date in ISO 8601 format (YYYY-MM-DD) for datetime attribute
 * - description: Post description/excerpt
 * - readingTime: Reading time in minutes
 * 
 * Usage:
 * <PostCard 
 *   title="My Post" 
 *   url="/2024/01/01/my-post/"
 *   date="January 1, 2024"
 *   isoDate="2024-01-01"
 *   description="A brief description"
 *   readingTime={5}
 * />
 */

import { formatReadingTime } from '../utils/reading-time';
import { stripMarkdown } from '../utils/strip-markdown';

interface Props {
  title: string;
  url: string;
  date: string;
  isoDate: string;
  description?: string;
  readingTime: number;
}

const { title, url, date, isoDate, description, readingTime } = Astro.props;
---

<article class="card border rounded-3 h-100 post-card">
  <div class="card-accent"></div>
  <div class="card-body p-3">
    <h3 class="card-title h5 mb-2">
      <a href={url} class="text-body text-decoration-none stretched-link">{title}</a>
    </h3>
    <div class="text-body-secondary small mb-2">
      <time datetime={isoDate}>{date}</time>
      <span class="mx-1">â€¢</span>
      <span>{formatReadingTime(readingTime)}</span>
    </div>
    {description && (
      <p class="card-text text-body-secondary mb-0 small">{stripMarkdown(description)}</p>
    )}
  </div>
</article>

<style>
  /* Enhanced card styles with accent border */
  .post-card {
    position: relative;
    transition: transform 0.2s ease, box-shadow 0.2s ease, border-color 0.2s ease;
    overflow: hidden;
  }
  
  /* Gradient accent on left border */
  .card-accent {
    position: absolute;
    left: 0;
    top: 0;
    bottom: 0;
    width: 3px;
    background: linear-gradient(
      180deg,
      rgba(var(--bs-primary-rgb, 13, 110, 253), 0.6),
      rgba(var(--bs-primary-rgb, 13, 110, 253), 0.3)
    );
    opacity: 0;
    transition: opacity 0.2s ease;
  }
  
  .post-card:hover {
    box-shadow: 0 6px 16px rgba(0, 0, 0, 0.12);
    border-color: rgba(var(--bs-primary-rgb, 13, 110, 253), 0.3);
  }
  
  /* Respect reduced motion preferences for transform animations */
  @media (prefers-reduced-motion: no-preference) {
    .post-card:hover {
      transform: translateY(-3px);
    }
  }
  
  .post-card:hover .card-accent {
    opacity: 1;
  }

  /* Dark mode box-shadow adjustment */
  @media (prefers-color-scheme: dark) {
    .post-card:hover {
      box-shadow: 0 6px 16px rgba(0, 0, 0, 0.4);
      border-color: rgba(var(--bs-primary-rgb, 13, 110, 253), 0.4);
    }
    
    .card-accent {
      background: linear-gradient(
        180deg,
        rgba(var(--bs-primary-rgb, 13, 110, 253), 0.8),
        rgba(var(--bs-primary-rgb, 13, 110, 253), 0.5)
      );
    }
  }
  
  /* Ensure link covers entire card for better UX */
  .post-card .stretched-link {
    transition: color 0.2s ease;
  }
  
  .post-card:hover .stretched-link {
    color: var(--bs-primary) !important;
  }
  
  /* Better card title typography - scoped to post-card */
  .post-card .card-title {
    font-weight: 600;
    letter-spacing: -0.01em;
    line-height: 1.3;
    /* Override global h3 position: relative to allow stretched-link to work */
    position: static;
  }
  
  /* Reduce top padding on mobile to balance vertical white space */
  @media (max-width: 767px) {
    .post-card .card-body {
      padding-top: 0.75rem !important; /* Reduce from 1rem (p-3) to 0.75rem on mobile */
    }
  }
</style>
