---
/**
 * PostCard Component
 * 
 * Display a blog post with title, date, description, and reading time in a card format.
 * Uses Tailwind CSS for styling with hover effects.
 * 
 * Props:
 * - title: Post title
 * - url: Post URL
 * - date: Post date (formatted string for display)
 * - isoDate: Post date in ISO 8601 format (YYYY-MM-DD) for datetime attribute
 * - description: Post description/excerpt
 * - readingTime: Reading time in minutes
 * 
 * Usage:
 * <PostCard 
 *   title="My Post" 
 *   url="/2024/01/01/my-post/"
 *   date="January 1, 2024"
 *   isoDate="2024-01-01"
 *   description="A brief description"
 *   readingTime={5}
 * />
 */

import { formatReadingTime } from '../utils/reading-time';
import { stripMarkdown } from '../utils/strip-markdown';

interface Props {
  title: string;
  url: string;
  date: string;
  isoDate: string;
  description?: string;
  readingTime: number;
}

const { title, url, date, isoDate, description, readingTime } = Astro.props;
---

<article class="card border rounded-lg h-full post-card bg-white dark:bg-gray-800 border-gray-200 dark:border-gray-700">
  <div class="card-accent"></div>
  <div class="card-body p-4">
    <h3 class="card-title text-base font-semibold mb-2">
      <a href={url} class="text-gray-900 dark:text-gray-100 no-underline stretched-link">{title}</a>
    </h3>
    <div class="text-gray-600 dark:text-gray-400 text-sm mb-2">
      <time datetime={isoDate}>{date}</time>
      <span class="mx-1">â€¢</span>
      <span>{formatReadingTime(readingTime)}</span>
    </div>
    {description && (
      <p class="card-text text-gray-600 dark:text-gray-400 mb-0 text-sm">{stripMarkdown(description)}</p>
    )}
  </div>
</article>

<style>
  /* Enhanced card styles with accent border */
  .post-card {
    position: relative;
    @apply transition-all duration-200 overflow-hidden;
  }
  
  /* Gradient accent on left border */
  .card-accent {
    position: absolute;
    left: 0;
    top: 0;
    bottom: 0;
    width: 3px;
    background: linear-gradient(
      180deg,
      rgba(51, 122, 183, 0.6),
      rgba(51, 122, 183, 0.3)
    );
    @apply opacity-0 transition-opacity duration-200;
  }
  
  .post-card:hover {
    box-shadow: 0 6px 16px rgba(0, 0, 0, 0.12);
    border-color: rgba(51, 122, 183, 0.3);
  }
  
  @media (prefers-reduced-motion: no-preference) {
    .post-card:hover {
      @apply -translate-y-1;
    }
  }
  
  .post-card:hover .card-accent {
    @apply opacity-100;
  }

  /* Dark mode */
  @media (prefers-color-scheme: dark) {
    .post-card:hover {
      box-shadow: 0 6px 16px rgba(0, 0, 0, 0.4);
      border-color: rgba(51, 122, 183, 0.4);
    }
    
    .card-accent {
      background: linear-gradient(
        180deg,
        rgba(51, 122, 183, 0.8),
        rgba(51, 122, 183, 0.5)
      );
    }
  }
  
  /* Link covers entire card */
  .post-card .stretched-link {
    @apply transition-colors duration-200;
  }
  
  .post-card:hover .stretched-link {
    @apply text-primary;
  }
  
  /* Card title typography */
  .post-card .card-title {
    letter-spacing: -0.01em;
    line-height: 1.3;
    position: static;
  }
  
  /* Stretched link pseudo-element */
  .stretched-link::after {
    content: '';
    @apply absolute inset-0;
  }
  
  /* Reduce top padding on mobile */
  @media (max-width: 767px) {
    .post-card .card-body {
      @apply pt-3;
    }
  }
</style>
