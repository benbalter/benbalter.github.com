---
/**
 * Footer Component
 * 
 * Site-wide footer with navigation links and social connections.
 * Matches the structure and styling of the Jekyll footer.
 */

import { siteConfig, footerLinks, contactLinks } from '../config';
---

<footer class="mt-4-custom">
  <nav aria-label="Footer navigation">
    <ul class="nav justify-content-end border-top px-2 py-3">
      {footerLinks.map((link) => (
        <li class="nav-item">
          <a href={link.url} class="nav-link link-secondary">
            {link.title}
          </a>
        </li>
      ))}
      
      <li class="nav-item">
        <a href="/feed.xml" aria-label="RSS Feed" class="nav-link">
          <i class="fas fa-rss" title="RSS Feed"></i>
        </a>
      </li>
    </ul>
  </nav>
  
  <div class="social-links text-center py-3">
    {contactLinks.map((link) => (
      <a 
        href={link.url} 
        aria-label={link.name}
        class="social-link d-inline-block"
        target="_blank"
        rel="noopener noreferrer me"
      >
        <i class={link.icon} title={link.name}></i>
      </a>
    ))}
  </div>
</footer>

<style lang="scss">
  /* Import Bootstrap nav component (scoped to this component) */
  @import 'bootstrap/scss/functions';
  @import 'bootstrap/scss/variables';
  @import 'bootstrap/scss/variables-dark';
  @import 'bootstrap/scss/maps';
  @import 'bootstrap/scss/mixins';
  @import 'bootstrap/scss/nav';
  
  /* Custom styles not available in Bootstrap utilities */
  .social-link {
    margin: 0 0.5rem;
    color: var(--bs-link-color);
    font-size: 1.5rem;
    text-decoration: none;
    transition: color 0.15s ease-in-out, transform 0.15s ease-in-out;
  }

  .social-link:hover,
  .social-link:focus {
    color: var(--bs-link-hover-color);
    transform: translateY(-2px);
  }

  @media (max-width: 768px) {
    .nav {
      justify-content: center !important;
      flex-direction: column;
      text-align: center;
    }
  }
</style>

<!-- Note: FontAwesome icons require the FontAwesome library to be loaded in the layout -->
