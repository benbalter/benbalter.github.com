---
/**
 * Footer Component
 * 
 * Site-wide footer with navigation links and social connections.
 * Uses Tailwind CSS utilities and minimal custom styles.
 * Matches the structure and styling of the Jekyll footer.
 * 
 * Uses inline SVG icons via the Icon component for better performance
 * (eliminates the ~77KB FontAwesome JS bundle).
 */

import { footerLinks, contactLinks } from '../config';
import Icon from './Icon.astro';
---

<footer class="mt-12 pt-6 footer-divider" transition:persist>
  <nav aria-label="Footer navigation" class="footer-nav">
    <div class="flex justify-between px-2 py-4 mb-6 flex-wrap">
      <ul class="flex flex-wrap list-none p-0 m-0 contact-links">
        {contactLinks.map((link) => (
          <li class="relative">
            <a 
              href={link.url} 
              aria-label={link.name}
              class="nav-link social-link text-gray-900 dark:text-gray-100 p-2 min-h-[44px] min-w-[44px] inline-flex items-center justify-center transition-all duration-200 hover:text-primary dark:hover:text-primary-400"
              target="_blank"
              rel="noopener noreferrer me"
            >
              <Icon name={link.icon} title={link.name} />
            </a>
          </li>
        ))}
      </ul>
      
      <ul class="flex flex-wrap list-none p-0 m-0 footer-links">
        {footerLinks.map((link) => (
          <li class="relative">
            <a href={link.url} class="nav-link link-secondary text-gray-700 dark:text-gray-400 hover:text-gray-800 dark:hover:text-gray-300 px-3 py-2 text-sm transition-all duration-200 footer-link">
              {link.title}
            </a>
          </li>
        ))}
        
        <li class="relative">
          <a href="/feed.xml" aria-label="RSS Feed" class="nav-link social-link text-gray-900 dark:text-gray-100 p-2 min-h-[44px] min-w-[44px] inline-flex items-center justify-center transition-all duration-200 hover:text-primary dark:hover:text-primary-400">
            <Icon name="rss" title="RSS Feed" />
          </a>
        </li>
      </ul>
    </div>
  </nav>
</footer>

<style>
  @reference "../styles/global.css";
  
  /* Enhanced footer divider with gradient */
  .footer-divider {
    border-top: 2px solid rgba(51, 122, 183, 0.1);
    position: relative;
  }
  
  .footer-divider::before {
    content: '';
    position: absolute;
    top: -2px;
    left: 0;
    right: 0;
    height: 2px;
    background: linear-gradient(
      90deg,
      transparent,
      rgba(51, 122, 183, 0.4) 20%,
      rgba(51, 122, 183, 0.6) 50%,
      rgba(51, 122, 183, 0.4) 80%,
      transparent
    );
  }

  /* Social link hover effects with touch optimization */
  .social-link {
    position: relative;
    touch-action: manipulation;
  }
  
  .social-link::before {
    content: '';
    position: absolute;
    top: -4px;
    right: -4px;
    bottom: -4px;
    left: -4px;
    @apply bg-primary/10;
    border-radius: 50%;
    opacity: 0;
    transition: opacity 0.2s ease, transform 0.2s ease;
  }
  
  /* Enhanced touch area on mobile */
  @media (max-width: 767px) {
    .social-link::before {
      top: -8px;
      right: -8px;
      bottom: -8px;
      left: -8px;
    }
  }
  
  /* Ensure icon stays above pseudo-element */
  .social-link :global(svg) {
    position: relative;
    z-index: 1;
    transition: transform 0.2s ease;
  }
  
  @media (hover: hover) {
    .social-link:hover::before {
      opacity: 1;
      transform: scale(1.1);
    }
    
    .social-link:hover {
      transform: translateY(-2px);
    }
    
    .social-link:hover :global(svg) {
      transform: scale(1.05);
    }
  }
  
  .social-link:active {
    transform: translateY(1px);
  }
  
  .social-link:active::before {
    opacity: 1;
    @apply bg-primary/15;
  }
  
  @media (prefers-reduced-motion: reduce) {
    .social-link::before,
    .social-link :global(svg) {
      transition: none;
    }
    
    .social-link:hover {
      transform: none;
    }
    
    .social-link:hover :global(svg) {
      transform: none;
    }
  }
  
  /* Footer text links underline effect */
  .footer-link {
    position: relative;
  }
  
  .footer-link::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 50%;
    width: 0;
    height: 1px;
    background: currentColor;
    transition: width 0.2s ease, left 0.2s ease;
  }
  
  .footer-link:hover::after {
    width: 80%;
    left: 10%;
  }

  /* Responsive layout */
  @media (max-width: 768px) {
    .footer-nav > div {
      @apply justify-center flex-col text-center;
    }
    
    .contact-links,
    .footer-links {
      @apply justify-center;
    }
  }
  
  /* Dark mode divider */
  @media (prefers-color-scheme: dark) {
    .footer-divider {
      border-top-color: rgba(51, 122, 183, 0.2);
    }
    
    .footer-divider::before {
      background: linear-gradient(
        90deg,
        transparent,
        rgba(108, 180, 232, 0.3) 20%,
        rgba(108, 180, 232, 0.5) 50%,
        rgba(108, 180, 232, 0.3) 80%,
        transparent
      );
    }
  }
</style>
