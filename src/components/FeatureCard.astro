---
/**
 * FeatureCard Component
 * 
 * Display a feature or service with an emoji icon, title, and description.
 * Uses Bootstrap card component and utility classes for styling.
 * Used on the about page and other marketing/informational pages.
 * 
 * Props:
 * - emoji: Icon emoji to display at the top
 * - title: Feature title
 * - description: Feature description text
 * 
 * Usage:
 * <FeatureCard 
 *   emoji="ðŸš€" 
 *   title="Fast" 
 *   description="Lightning-fast performance" 
 * />
 */

interface Props {
  emoji: string;
  title: string;
  description: string;
}

const { emoji, title, description } = Astro.props;
---

<div class="card border rounded-3 p-3 h-100 feature-card">
  <div class="display-4 mb-3">{emoji}</div>
  <h3 class="text-primary mt-0 mb-2">{title}</h3>
  <p class="text-secondary lh-base m-0">{description}</p>
</div>

<style>
  /* Minimal custom styles for hover effects */
  .feature-card {
    transition: transform 0.2s, box-shadow 0.2s;
  }
  
  .feature-card:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
  }

  /* Dark mode box-shadow adjustment */
  @media (prefers-color-scheme: dark) {
    .feature-card:hover {
      box-shadow: 0 4px 8px rgba(255, 255, 255, 0.1);
    }
  }
</style>
