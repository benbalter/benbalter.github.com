---
/**
 * Mini Bio Component
 * 
 * Displays a brief author bio with avatar for blog posts.
 * Replicates the Jekyll mini-bio.html include functionality.
 */

import { siteConfig } from '../config';

// GitHub username for avatar
const githubUsername = 'benbalter';

// Bio text - first paragraph from the about page
const bioText = `Ben Balter is the Director of Hubber Enablement within the Office of the COO at GitHub, the world's largest software development platform, ensuring all Hubbers can do their best (remote) work.`;
---

<div class="mini-bio">
  <div class="float-start pt-1 pe-3">
    <img 
      src={`https://avatars.githubusercontent.com/${githubUsername}?s=100`}
      alt={siteConfig.author}
      width="100"
      height="100"
      class="avatar"
    />
  </div>
  
  <p>
    {bioText} <a href="/about/">More about the author &rarr;</a>
  </p>
</div>

<style>
  .mini-bio {
    font-size: 1rem;
    line-height: 1.6;
    color: #24292e;
  }

  .float-start {
    float: left;
  }

  .pt-1 {
    padding-top: 0.25rem;
  }

  .pe-3 {
    padding-right: 1rem;
  }

  .avatar {
    border-radius: 6px;
    display: block;
  }

  .mini-bio p {
    margin: 0;
  }

  .mini-bio a {
    color: #0366d6;
    text-decoration: none;
  }

  .mini-bio a:hover {
    text-decoration: underline;
  }

  /* Clear float after mini-bio */
  .mini-bio::after {
    content: "";
    display: table;
    clear: both;
  }
</style>
