---
import { getCollection, type CollectionEntry } from 'astro:content';
import PostLayout from '../../../../layouts/PostLayout.astro';
import { findRelatedPosts } from '../../../../utils/related-posts';

// Generate static paths for all blog posts with Jekyll URL structure
export async function getStaticPaths() {
  const posts = await getCollection('posts', ({ data }: CollectionEntry<'posts'>) => {
    return data.published !== false;
  });

  return posts.map((post: CollectionEntry<'posts'>) => {
    // Extract date from slug (YYYY-MM-DD-slug format)
    const dateMatch = post.slug.match(/^(\d{4})-(\d{2})-(\d{2})-(.+)$/);
    
    if (dateMatch) {
      const [, year, month, day, slug] = dateMatch;
      return {
        params: { year, month, day, slug },
        props: { post, allPosts: posts },
      };
    }
    
    // Fallback for posts without date in slug
    console.warn(`Post ${post.slug} does not match expected format YYYY-MM-DD-slug`);
    return null;
  }).filter(Boolean);
}

interface Props {
  post: CollectionEntry<'posts'>;
  allPosts: CollectionEntry<'posts'>[];
}

const { post, allPosts } = Astro.props;
const { Content } = await post.render();

// Extract date from params for display
const { year, month, day, slug } = Astro.params;
const pubDate = new Date(parseInt(year), parseInt(month) - 1, parseInt(day));

// Generate OG image URL for this post
// If post has a custom image, use that, otherwise use the dynamically generated one
const ogImageUrl = post.data.image || `/og/${year}/${month}/${day}/${slug}.png`;

// Find related posts (limit to 10)
const relatedPosts = await findRelatedPosts(post, allPosts, 10);
---

<PostLayout
  title={post.data.title}
  description={post.data.description}
  pubDate={pubDate}
  image={ogImageUrl}
  relatedPosts={relatedPosts}
  archived={post.data.archived}
  postSlug={post.slug}
>
  <Content />
</PostLayout>
