---
import { getCollection, type CollectionEntry } from 'astro:content';
import PostLayout from '../../layouts/PostLayout.astro';

// Generate static paths for all blog posts
export async function getStaticPaths() {
  const posts = await getCollection('posts', ({ data }: CollectionEntry<'posts'>) => {
    return data.published !== false;
  });

  return posts.map((post: CollectionEntry<'posts'>) => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

interface Props {
  post: CollectionEntry<'posts'>;
}

const { post } = Astro.props;
const { Content } = await post.render();

// Extract date from slug if in Jekyll format (YYYY-MM-DD-slug)
const dateMatch = post.slug.match(/^(\d{4})-(\d{2})-(\d{2})-/);
const pubDate = dateMatch 
  ? new Date(parseInt(dateMatch[1]), parseInt(dateMatch[2]) - 1, parseInt(dateMatch[3]))
  : undefined;
---

<PostLayout
  title={post.data.title}
  description={post.data.description}
  pubDate={pubDate}
  image={post.data.image}
>
  <Content />
</PostLayout>
