---
import PageLayout from '../layouts/PageLayout.astro';
import { siteConfig } from '../config';
import ContactLinks from '../components/ContactLinks.astro';

const title = 'Contact';
const description = `Contact ${siteConfig.author} via email or social media`;
---

<PageLayout title={title} description={description}>
  <p class="text-center lead">
    Looking to get in touch? Email <a href={`mailto:${siteConfig.email}`}>{siteConfig.email}</a> or I'm <code>@{siteConfig.socialUsername}</code> most places:
  </p>

  <ContactLinks />
</PageLayout>
<style>
  .text-center {
    text-align: center !important;
  }

  .lead {
    font-size: 1.25rem;
    font-weight: 300;
    margin-bottom: 2rem;
  }

  code {
    padding: 0.2em 0.4em;
    border-radius: 3px;
    font-family: 'SFMono-Regular', Consolas, 'Liberation Mono', Menlo, Courier, monospace;
    font-size: 0.9em;
    /* Light mode: Use explicit colors for better contrast (11.85:1 - WCAG AAA) */
    background-color: #dee2e6;
    color: #212529;
    border: 1px solid #ced4da;
  }

  /* Dark mode: ensure proper contrast in dark theme (9.70:1 - WCAG AAA) */
  @media (prefers-color-scheme: dark) {
    code {
      background-color: #343a40;
      color: #e9ecef;
      border-color: #495057;
    }
  }
</style>
