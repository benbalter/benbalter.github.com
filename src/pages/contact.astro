---
import PageLayout from '../layouts/PageLayout.astro';
import { siteConfig } from '../config';
import ContactLinks from '../components/ContactLinks.astro';

const title = 'Contact';
const description = 'Contact Ben Balter via email or social media';
---

<PageLayout title={title} description={description}>
  <p class="text-center lead mb-4">
    Looking to get in touch? Email <a href={`mailto:${siteConfig.email}`}>{siteConfig.email}</a> or I'm <code class="bg-secondary-subtle px-2 py-1 rounded">{siteConfig.socialUsername}</code> most places:
  </p>

  <ContactLinks />
</PageLayout>
