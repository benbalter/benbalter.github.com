---
import PageLayout from '../layouts/PageLayout.astro';

const title = 'Contact';
const description = 'Contact Ben Balter via email or social media';

// Contact links from config
const contactLinks = [
  { name: 'Email', url: 'mailto:ben@balter.com', icon: 'fa-solid fa-envelope' },
  { name: 'Add to contacts', url: '/vcard.vcf', icon: 'fa-solid fa-address-card' },
  { name: 'Bluesky', url: 'https://bsky.app/profile/ben.balter.com', icon: 'fa-brands fa-bluesky' },
  { name: 'LinkedIn', url: 'https://www.linkedin.com/in/benbalter', icon: 'fa-brands fa-linkedin' },
  { name: 'GitHub', url: 'https://github.com/benbalter', icon: 'fa-brands fa-github' },
];

const pgpKey = '07C6 73FB F30E 01C0 C342 7AB8 DBB6 7C24 6AD3 56C4';
---

<PageLayout title={title} description={description}>
  <p class="text-center lead">
    Looking to get in touch? Email <a href="mailto:ben@balter.com">ben@balter.com</a> or I'm <code>@benbalter</code> most places:
  </p>

  <div class="contact-links text-center">
    <div class="row justify-content-center">
      {contactLinks.map((link) => (
        <div class="col-sm">
          <a href={link.url} rel="me noopener" target="_blank">
            <div class="row justify-content-center mb-3 align-items-center">
              <div class="col-sm-12 col-2 offset-3 offset-sm-0 text-center">
                <i class={`${link.icon} fa-2x`} aria-hidden="true"></i>
              </div>
              <div class="col-sm-12 col-6 text-sm-center text-start">
                {link.name}
              </div>
            </div>
          </a>
        </div>
      ))}
    </div>

    <p class="small">
      <a href="/key.asc">PGP: <code>{pgpKey}</code></a>
    </p>
  </div>
</PageLayout>
<style>
  .text-center {
    text-align: center !important;
  }

  .lead {
    font-size: 1.25rem;
    font-weight: 300;
    margin-bottom: 2rem;
  }

  .contact-links {
    margin-top: 2rem;
  }

  .contact-links .row {
    display: flex;
    flex-wrap: wrap;
    margin-right: -15px;
    margin-left: -15px;
  }

  .contact-links .col-sm {
    flex: 1 0 0%;
    padding: 0 15px;
  }

  .contact-links a {
    text-decoration: none;
    color: inherit;
    display: block;
  }

  .contact-links a:hover {
    color: #0366d6;
  }

  .contact-links .mb-3 {
    margin-bottom: 1rem !important;
  }

  .contact-links .justify-content-center {
    justify-content: center !important;
  }

  .contact-links .align-items-center {
    align-items: center !important;
  }

  .contact-links .text-center {
    text-align: center !important;
  }

  .contact-links .text-start {
    text-align: left !important;
  }

  .contact-links .text-sm-center {
    text-align: center !important;
  }

  .small {
    font-size: 0.875em;
    margin-top: 1rem;
  }

  code {
    background-color: #f6f8fa;
    padding: 0.2em 0.4em;
    border-radius: 3px;
    font-family: 'SFMono-Regular', Consolas, 'Liberation Mono', Menlo, Courier, monospace;
    font-size: 0.9em;
  }

  @media (max-width: 768px) {
    .contact-links .col-sm {
      flex: 0 0 100%;
      max-width: 100%;
      margin-bottom: 0.5rem;
    }

    .contact-links .offset-3 {
      margin-left: 25%;
    }

    .contact-links .col-2 {
      flex: 0 0 auto;
      width: 16.666667%;
    }

    .contact-links .col-6 {
      flex: 0 0 auto;
      width: 50%;
    }

    .contact-links .col-12 {
      flex: 0 0 auto;
      width: 100%;
    }
  }
</style>
