---
import PageLayout from '../layouts/PageLayout.astro';
import { siteConfig } from '../config';
import ContactLinks from '../components/ContactLinks.astro';

const title = 'Contact';
const description = `Get in touch with ${siteConfig.author} via email at ${siteConfig.email} or connect on Bluesky, LinkedIn, and GitHub. Open for collaboration and conversation.`;
---

<PageLayout title={title} description={description}>
  <p class="text-center text-lg mb-6">
    Looking to get in touch? Email <a href={`mailto:${siteConfig.email}`}>{siteConfig.email}</a> or I'm <code>@{siteConfig.socialUsername}</code> most places:
  </p>

  <ContactLinks />
</PageLayout>
