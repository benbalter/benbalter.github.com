---
/**
 * Resume Page
 * 
 * Displays Ben Balter's professional experience, education, and certifications.
 * Loads position data from _resume_positions directory.
 */

import PageLayout from '../layouts/PageLayout.astro';
import { getEntry } from 'astro:content';
import { getResumePositions } from '../lib/resume-positions';
import type { ResumePosition } from '../lib/resume-positions';

// Load resume page data
const resumePage = await getEntry('pages', 'resume');
if (!resumePage) {
  throw new Error('Resume page data not found');
}

const { title, description, degrees, certifications } = resumePage.data;

// Load resume positions
const positions = await getResumePositions();

// Format date helper
function formatDate(dateString: string): string {
  const date = new Date(dateString);
  // Check if date is valid
  if (isNaN(date.getTime())) {
    console.warn(`Invalid date format: ${dateString}`);
    return 'Invalid Date';
  }
  return date.toLocaleDateString('en-US', { month: 'long', year: 'numeric' });
}

// Group positions by employer to handle multiple roles at same company
interface GroupedPosition {
  employer: string;
  positions: ResumePosition[];
}

// Group all positions by employer, regardless of order
const employerGroups = new Map<string, ResumePosition[]>();
for (const position of positions) {
  if (!employerGroups.has(position.employer)) {
    employerGroups.set(position.employer, []);
  }
  employerGroups.get(position.employer)!.push(position);
}

// Convert to array and sort positions within each employer by start_date (most recent first)
const groupedPositions: GroupedPosition[] = Array.from(employerGroups.entries()).map(([employer, positions]) => ({
  employer,
  positions: positions.sort((a, b) => new Date(b.start_date).getTime() - new Date(a.start_date).getTime()),
}));
---

<PageLayout title={title} description={description}>
  <section class="resume-section">
    <h2>Experience</h2>
    
    {groupedPositions.map((group) => (
      <div class="employer-group">
        <h3 class="employer-name">{group.employer}</h3>
        
        {group.positions.map((position) => (
          <div class="position">
            <div class="position-header">
              <div class="position-title">
                <h4>{position.title}</h4>
              </div>
              <div class="position-dates">
                {formatDate(position.start_date)}â€”{position.end_date ? formatDate(position.end_date) : 'Present'}
              </div>
            </div>
            
            <div class="position-content" set:html={position.content} />
          </div>
        ))}
      </div>
    ))}
  </section>
  
  {degrees && degrees.length > 0 && (
    <section class="resume-section">
      <h2>Education</h2>
      
      {degrees.map((degree) => (
        <div class="education-item">
          <h3 class="school-name h5">{degree.school}</h3>
          <div class="education-details">
            <div class="degree-name">{degree.degree}</div>
            <div class="degree-date">{formatDate(degree.date)}</div>
          </div>
        </div>
      ))}
    </section>
  )}
  
  {certifications && certifications.length > 0 && (
    <section class="resume-section">
      <h2>Certifications</h2>
      
      {certifications.map((cert) => (
        <div class="certification-item">
          <h3 class="certification-authority h5">{cert.authority}</h3>
          <div class="certification-name">
            {cert.url ? (
              <a href={cert.url} target="_blank" rel="noopener noreferrer">{cert.name}</a>
            ) : (
              cert.name
            )}
          </div>
        </div>
      ))}
    </section>
  )}
</PageLayout>

