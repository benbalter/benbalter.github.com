---
/**
 * Resume Page
 * 
 * Displays Ben Balter's professional experience, education, and certifications.
 * Uses Astro content collections for consistent markdown rendering.
 */

import PageLayout from '../layouts/PageLayout.astro';
import { getEntry, getCollection, type CollectionEntry } from 'astro:content';
import { formatResumeDate } from '../utils/post-urls';

// Load resume page data
const resumePage = await getEntry('pages', 'resume');
if (!resumePage) {
  throw new Error('Resume page data not found');
}

const { title, description, degrees, certifications } = resumePage.data;

// Load resume positions from content collection
const allPositions = await getCollection('resume-positions');

// Sort by start_date (most recent first)
const sortedPositions = allPositions.sort((a: CollectionEntry<'resume-positions'>, b: CollectionEntry<'resume-positions'>) => {
  return new Date(b.data.start_date).getTime() - new Date(a.data.start_date).getTime();
});

// Group positions by employer to handle multiple roles at same company
interface GroupedPosition {
  employer: string;
  positions: Array<CollectionEntry<'resume-positions'> & { Content: any }>;
}

// Group all positions by employer, regardless of order
const employerGroups = new Map<string, Array<CollectionEntry<'resume-positions'> & { Content: any }>>();
for (const position of sortedPositions) {
  const { Content } = await position.render();
  const positionWithContent = { ...position, Content };
  
  if (!employerGroups.has(position.data.employer)) {
    employerGroups.set(position.data.employer, []);
  }
  employerGroups.get(position.data.employer)!.push(positionWithContent);
}

// Convert to array and sort positions within each employer by start_date (most recent first)
const groupedPositions: GroupedPosition[] = Array.from(employerGroups.entries()).map(([employer, positions]) => ({
  employer,
  positions: positions.sort((a, b) => new Date(b.data.start_date).getTime() - new Date(a.data.start_date).getTime()),
}));
---

<PageLayout title={title} description={description}>
  <section class="mb-5">
    <h2 class="fs-3 fw-semibold mt-5 mb-4 text-body-emphasis border-bottom border-2 pb-2">Experience</h2>
    
    {groupedPositions.map((group) => (
      <div class="mb-5">
        <h3 class="fs-4 fw-semibold text-primary mb-3">{group.employer}</h3>
        
        {group.positions.map((position) => (
          <div class="mb-4 ps-3">
            <div class="d-flex justify-content-between align-items-start mb-2 gap-3 flex-column flex-md-row">
              <div>
                <h4 class="fs-5 fw-semibold text-body-emphasis m-0">{position.data.title}</h4>
              </div>
              <div class="text-secondary small text-md-end">
                {formatResumeDate(position.data.start_date) ?? 'Unknown'}â€”{position.data.end_date ? (formatResumeDate(position.data.end_date) ?? 'Unknown') : 'Present'}
              </div>
            </div>
            
            <div class="lh-lg text-body position-content">
              <position.Content />
            </div>
          </div>
        ))}
      </div>
    ))}
  </section>
  
  {degrees && degrees.length > 0 && (
    <section class="mb-5">
      <h2 class="fs-3 fw-semibold mt-5 mb-4 text-body-emphasis border-bottom border-2 pb-2">Education</h2>
      
      {degrees.map((degree: { school: string; degree: string; date: string }) => (
        <div class="mb-4">
          <h3 class="fs-5 fw-semibold text-body-emphasis mb-2">{degree.school}</h3>
          <div class="d-flex justify-content-between align-items-center gap-3 flex-column flex-md-row align-items-md-start">
            <div class="text-body">{degree.degree}</div>
            <div class="text-secondary small text-md-end">{formatResumeDate(degree.date) ?? 'Unknown'}</div>
          </div>
        </div>
      ))}
    </section>
  )}
  
  {certifications && certifications.length > 0 && (
    <section class="mb-5">
      <h2 class="fs-3 fw-semibold mt-5 mb-4 text-body-emphasis border-bottom border-2 pb-2">Certifications</h2>
      
      {certifications.map((cert: { authority: string; name: string; url?: string }) => (
        <div class="mb-4">
          <h3 class="fs-5 fw-semibold text-body-emphasis mb-2">{cert.authority}</h3>
          <div class="text-body">
            {cert.url ? (
              <a href={cert.url} target="_blank" rel="noopener noreferrer" class="text-primary text-decoration-none" aria-label={`View ${cert.name} credential`}>{cert.name}</a>
            ) : (
              cert.name
            )}
          </div>
        </div>
      ))}
    </section>
  )}
</PageLayout>

<style>
  /* Remove list bullets from position content */
  .position-content :global(ul) {
    list-style: none;
    padding-left: 0;
    margin: 0;
  }

  .position-content :global(li) {
    margin-bottom: 0.75rem;
    position: relative;
    padding-left: 0;
  }

  .position-content :global(li strong) {
    font-weight: 600;
    color: var(--bs-body-color);
  }
</style>
