{
  "filters": {},
  "rules": {
    "no-start-duplicated-conjunction": true,
    "terminology": {
      "exclude": [
        "HTML",
        "ID",
        "URL",
        "VS Code",
        "E2E",
        "JavaScript",
        "GitHub"
      ]
    },
    "write-good": {
      "severity": "warning",
      "passive": false,
      "adverb": false,
      "weasel": false,
      "so": false,
      "thereIs": false
    },
    "diacritics": true,
    "doubled-spaces": true,
    "stop-words": {
      "severity": "warning",
      "exclude": [
        "so as to",
        "e.g.",
        "etc.",
        "i.e.",
        "if you want to"
      ]
    },
    "@textlint-rule/no-unmatched-pair": true,
    "@textlint-rule/no-duplicate-abbr": true,
    "common-misspellings": {
      "ignore": [
        "CLAs"
      ]
    }
  }
}